<h1>Sign up</h1>
 <%= form_for :user, url: users_path do |f| %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
  </p>
  
  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>

  <p>
     <%= f.label :password %><br>
     <%= f.password_field  :password %>
  </p>

  <p>
   <%= f.submit %>
  </p>
<% end %>

